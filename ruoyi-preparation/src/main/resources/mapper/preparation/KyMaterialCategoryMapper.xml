<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.preparation.mapper.KyMaterialCategoryMapper">
    
    <resultMap type="com.ruoyi.preparation.domain.KyMaterialCategory" id="KyMaterialCategoryResult">
        <id     property="id"           column="id"           />
        <result property="name"         column="name"         />
        <result property="sort"         column="sort"         />
        <result property="status"       column="status"       />
        <result property="delFlag"      column="del_flag"     />
        <result property="createBy"     column="create_by"    />
        <result property="createTime"   column="create_time"  />
        <result property="updateBy"     column="update_by"    />
        <result property="updateTime"   column="update_time"  />
    </resultMap>

    <sql id="selectKyMaterialCategoryVo">
        select id, name, sort, status, del_flag, create_by, create_time, update_by, update_time 
        from ky_material_category
    </sql>

    <select id="selectKyMaterialCategoryList" parameterType="com.ruoyi.preparation.domain.KyMaterialCategory" resultMap="KyMaterialCategoryResult">
        <include refid="selectKyMaterialCategoryVo"/>
        <where>
            del_flag = '0'
            <if test="name != null  and name != ''"> and name like concat('%', #{name}, '%')</if>
            <if test="status != null  and status != ''"> and status = #{status}</if>
        </where>
        order by sort asc
    </select>
    
    <select id="selectKyMaterialCategoryById" parameterType="Long" resultMap="KyMaterialCategoryResult">
        <include refid="selectKyMaterialCategoryVo"/>
        where id = #{id} and del_flag = '0'
    </select>
        
    <insert id="insertKyMaterialCategory" parameterType="com.ruoyi.preparation.domain.KyMaterialCategory" useGeneratedKeys="true" keyProperty="id">
        insert into ky_material_category
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="name != null">name,</if>
            <if test="sort != null">sort,</if>
            <if test="status != null">status,</if>
            <if test="delFlag != null">del_flag,</if>
            <if test="createBy != null">create_by,</if>
            create_time
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="name != null">#{name},</if>
            <if test="sort != null">#{sort},</if>
            <if test="status != null">#{status},</if>
            <if test="delFlag != null">#{delFlag},</if>
            <if test="createBy != null">#{createBy},</if>
            sysdate()
        </trim>
    </insert>

    <update id="updateKyMaterialCategory" parameterType="com.ruoyi.preparation.domain.KyMaterialCategory">
        update ky_material_category
        <trim prefix="SET" suffixOverrides=",">
            <if test="name != null">name = #{name},</if>
            <if test="sort != null">sort = #{sort},</if>
            <if test="status != null">status = #{status},</if>
            <if test="delFlag != null">del_flag = #{delFlag},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            update_time = sysdate()
        </trim>
        where id = #{id}
    </update>

    <update id="deleteKyMaterialCategoryById" parameterType="Long">
        update ky_material_category set del_flag = '1' where id = #{id}
    </update>

    <update id="deleteKyMaterialCategoryByIds" parameterType="String">
        update ky_material_category set del_flag = '1' where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </update>
</mapper>
